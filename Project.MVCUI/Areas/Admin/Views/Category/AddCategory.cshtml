@model CategoryVM
@{ ViewBag.Title = "AddCategory";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

<style>
    .genislik {
        width: 300px;
    }
</style>

@using (Html.BeginForm())
{
<div class="row">
    <div class="col-sm-12">
        <section class="panel">
            <header class="panel-heading">
                <b>Kategori Ekleme Sayfası</b>
            </header>
            <br /><br />
            <div class="panel-body">
                <div class="form-group">
                    <label class="col-sm-2 control-label">İsim</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.Category.Name, new { @class = "form-control genislik" })
                    </div>
                </div>

                <br /><br />
                <div class="form-group">
                    <label class="col-sm-2 control-label">Açıklama</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(x => x.Category.Description, new { @class = "form-control genislik" })
                    </div>
                </div>

                <br /> <br /><br />
                <div class="form-group">
                    <label class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <button class="btn btn-primary">
                            Kategori Ekle
                        </button>
                    </div>
                </div>

            </div>
        </section>
    </div>
</div>}